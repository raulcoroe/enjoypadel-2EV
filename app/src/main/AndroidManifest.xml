<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.svalero.enjoypadel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnjoyPadel">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".view.AddCenterView"
            android:exported="false" />
        <activity
            android:name=".view.CenterListView"
            android:exported="false" />
        <activity
            android:name=".view.CenterDetailView"
            android:exported="false" />
        <activity
            android:name=".view.MatchDetailView"
            android:exported="false" />
        <activity
            android:name=".view.AddMatchView"
            android:exported="false" />
        <activity
            android:name=".view.MatchListView"
            android:exported="false" />
        <activity
            android:name=".view.PreferenceView"
            android:exported="false" />
        <activity
            android:name=".view.AddPlayerView"
            android:exported="false" />
        <activity
            android:name=".view.PlayerListView"
            android:exported="false" />
        <activity
            android:name=".view.MainActivityView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>