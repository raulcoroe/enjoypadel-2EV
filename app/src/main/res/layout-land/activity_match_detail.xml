<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MatchDetailView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/round_view"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="50"
                    android:hint="@string/round"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/location_view"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="50"
                    android:hint="@string/locationTv"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team_one_player_one"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="50"
                    android:hint="@string/player_one"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/team_one_player_two"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="50"
                    android:hint="@string/player_two"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team_two_player_one"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="50"
                    android:hint="@string/player_one"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/team_two_player_two"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="50"
                    android:hint="@string/player_two"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="50"
                    android:hint="@string/date"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/duration_view"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="50"
                    android:hint="@string/duration"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/score_view"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="50"
                android:hint="@string/score"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>